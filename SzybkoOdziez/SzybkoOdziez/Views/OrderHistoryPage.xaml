<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SzybkoOdziez.Views.OrderHistoryPage">
  
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Historia zamówień" FontSize="Large" Margin="10" HorizontalTextAlignment="Center" TextColor="#555"/>
            <CollectionView x:Name="OrderList" ItemsSource="{Binding Orders}" Margin="10">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*"/>
                                    <RowDefinition Height="4*"/>
                                    <RowDefinition Height="3*"/>
                                </Grid.RowDefinitions>
                                <StackLayout Grid.Column="0" Grid.Row="0" Margin="5,5,0,0" >
                                    <Label x:Name="Numerll" Text="Numer zamówienia" FontSize="16" FontFamily="Calibri" FontAttributes="Bold"/>
                                    <Label Text="{Binding Name}" FontSize="Small" Margin="0,-5,0,0"/>
                                </StackLayout>
                                <StackLayout Grid.Column="0" Grid.Row="1" Margin="5,0,0,0" >
                                    <Label Text="Data zamówienia" FontSize="16" FontFamily="Calibri" FontAttributes="Bold"/>
                                    <Label Text="{Binding Name}" FontSize="Small" Margin="0,-5,0,0"/>
                                </StackLayout>
                                <Frame BackgroundColor="LightGray" Padding="0,2,0,0" CornerRadius="0" HasShadow="False"
                                            Grid.Column="0" 
                                            Grid.Row="2" 
                                            Margin="0,0,-10,0">
                                    <Label  
                                            VerticalTextAlignment="Center"
                                            BackgroundColor="#F6F6F6"
                                            TextColor="Gray"
                                            FontSize="18" FontFamily="Calibri" FontAttributes="Bold"
                                            Text="Pokaż więcej"
                                            Padding="10,0,0,0">
                                        <Label.GestureRecognizers>

                                        </Label.GestureRecognizers>
                                    </Label>
                                </Frame>
                                <Frame  BackgroundColor="LightGray" Padding="0,2,0,0" CornerRadius="0" HasShadow="False"
                                            Grid.Column="1" 
                                            Grid.Row="2"
                                            Margin="0,0,0,0">
                                    <Label  
                                            VerticalTextAlignment="Center"
                                            BackgroundColor="#F6F6F6"
                                            TextColor="Gray"
                                            FontSize="18" FontFamily="Calibri"
                                            HorizontalTextAlignment="End"
                                            Text="&#9660;"
                                            Padding="0,0,10,0">
                                        <Label.GestureRecognizers x:Name="BRUh">

                                        </Label.GestureRecognizers>
                                    </Label>
                                </Frame>

                                <StackLayout Orientation="Horizontal" Grid.Column="1" Grid.RowSpan="2" >
                                    <Frame HorizontalOptions="EndAndExpand" BackgroundColor="#LightGray" WidthRequest="70" Padding="2,2,2,2" CornerRadius="0" HasShadow="False">
                                        <Image Source="Resources/drawable/w_pants_item_2.jpg" Aspect="Fill"/>
                                    </Frame>
                                    <Frame x:Name="additionalItemsExistImg" IsVisible="true" HorizontalOptions="End" BackgroundColor="#LightGray" WidthRequest="70" Padding="2,2,2,2" Margin="0,0,5,0" CornerRadius="0" HasShadow="False">
                                        <Image Source="Resources/drawable/other_order_items.jpg" Aspect="Fill"/>
                                    </Frame>
                                </StackLayout>

                            </Grid>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
