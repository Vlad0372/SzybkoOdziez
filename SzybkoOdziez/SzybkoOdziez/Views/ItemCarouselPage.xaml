<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SzybkoOdziez.Views.ItemCarouselPage">
    <ContentPage.Content>
        <CarouselView ItemsSource="{Binding imageSources}" >
            <CarouselView.ItemTemplate>
                <DataTemplate >
                    <StackLayout  Style="{StaticResource SZO_StyleBG2}">
                        <Frame HasShadow ="True"
                               
                               Margin="20"
                                BorderColor ="Black" Padding="15" CornerRadius="20"  Style="{StaticResource SZO_StyleBG}">
                            <StackLayout>
                                <Label Text="{Binding}" Style="{StaticResource SZO_StyleTxt}"  FontSize="Large" HorizontalTextAlignment="Center" />
                                <Image Source="{Binding}"
                                       HeightRequest="600"
                                       WidthRequest="600"/>
                            </StackLayout>
                        </Frame>
                    </StackLayout>
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
    </ContentPage.Content>
</ContentPage>