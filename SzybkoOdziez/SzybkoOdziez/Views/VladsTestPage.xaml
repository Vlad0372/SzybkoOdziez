<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SzybkoOdziez.Views.VladsTestPage"
             xmlns:vm="clr-namespace:SzybkoOdziez.ViewModels"
             Title="{Binding Title}">

    <ContentPage.BindingContext>
        <vm:VladsTestPage />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="Accent">#96d1ff</Color>
        </ResourceDictionary>
    </ContentPage.Resources>
    <StackLayout BackgroundColor="White">
        <StackLayout Margin="10,10,10,10" VerticalOptions="FillAndExpand" BackgroundColor="Silver" >
            <StackLayout Margin="1,1,1,1" x:Name="imgContainer"  VerticalOptions="FillAndExpand" BackgroundColor="Orange">
                <ContentView Padding="0,0,0,0" VerticalOptions="FillAndExpand" BackgroundColor="#F0EAD6" >
                    <Image x:Name="productUrl" Source="Resources/drawable/m_acc_item_1.jpg" Aspect="Fill"/>
                </ContentView>
            </StackLayout>
        </StackLayout>
        <StackLayout Margin="20,10,20,10" VerticalOptions="FillAndExpand">
            <Grid BackgroundColor="Gray" HeightRequest="150" Padding="1,1,1,1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" 
                       Grid.Row="0" 
                       BackgroundColor="White"
                       TextColor="Black"
                       FontSize="18" FontFamily="Calibri" FontAttributes="Bold"
                       x:Name="productName"
                       Text="Nazwa">
                </Label>
                <Label Grid.Column="1" 
                       Grid.Row="0" 
                       BackgroundColor="White"
                       TextColor="Black"
                       FontSize="18" FontFamily="Calibri"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Start"
                       x:Name="productPrice"
                       Text="Cena">
                    
                </Label>
                <Label Text="Opis"
                       FontFamily="courier new" 
                       Grid.ColumnSpan="2" 
                       Grid.Row="1" 
                       BackgroundColor="White"
                       TextColor="Gray"
                       x:Name="productDesc"
                       FontSize="18" 
                       >

                </Label>
                <Label Grid.Column="0" 
                       Grid.Row="2" 
                       BackgroundColor="White"
                       TextColor="Gray"
                       FontSize="18" FontFamily="Calibri"
                       Text="Item details">
                    
                </Label>
                <Label Grid.Column="1" 
                       Grid.Row="2" 
                       BackgroundColor="White"
                       TextColor="Gray"
                       FontSize="18" FontFamily="Calibri"
                       HorizontalTextAlignment="End"
                       Text="V">
                    
                </Label>
            </Grid>
        </StackLayout>
            <!--<StackLayout Margin="10,0,10,10" 
                         VerticalOptions="End" 
                         BackgroundColor="#358550"
                         HeightRequest="140">
                
            </StackLayout>-->
        <StackLayout HorizontalOptions="Center" Orientation="Horizontal" Margin="0,0,0,10" >
            <ImageButton Source="like.png" 
                         HorizontalOptions="Center" 
                         VerticalOptions="CenterAndExpand"
                         WidthRequest="100" 
                         HeightRequest="100" 
                         CornerRadius="50" 
                         Margin="0,0,20,0"
                         x:Name="likeButton"
                         Clicked="OnLikeClicked"/>
            
            <ImageButton Source="dislike.png" 
                         HorizontalOptions="Center" 
                         VerticalOptions="CenterAndExpand"
                         WidthRequest="100" 
                         HeightRequest="100" 
                         CornerRadius="50" 
                         x:Name="dislikeButton"
                         Clicked="OnDislikeClicked"/>
        </StackLayout>
    </StackLayout>
