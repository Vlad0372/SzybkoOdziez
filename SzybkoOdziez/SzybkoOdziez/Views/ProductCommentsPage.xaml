<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SzybkoOdziez.Views.ProductCommentsPage">
    <ContentPage.Content>
        <StackLayout>
            <!--<Grid.RowDefinitions>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>-->
            <StackLayout Padding="10">
                <Label Text="Add Comment" 
                       FontSize="Large" />
                <Entry x:Name="CommentTitleEntry" Placeholder="Title" Margin="0,10,0,0" />
                <Editor x:Name="CommentTextEditor" 
                        Placeholder="Text Content" 
                        HeightRequest="100" 
                        Margin="0,10,0,0" 
                        BackgroundColor="BlanchedAlmond"/>
                <Button Text="Add comment"
                        Clicked="OnAddCommentButtonClicked"
                        Margin="0,10,0,0" 
                        CornerRadius="15" 
                        BorderColor="Orange" 
                        BorderWidth="2"
                        BackgroundColor="AntiqueWhite"
                        TextColor="DarkGray"/>
            </StackLayout>
            <CollectionView ItemsSource="{Binding Comments}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!--<ViewCell>-->
                        <Grid Padding="10" Margin="0" BackgroundColor="Aqua">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--Comment Title-->
                            <Label Text="{Binding Title}" 
                                       Grid.Row="0" Grid.Column="0" />

                            <!--Comment edit, delete-->
                            <!--<Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.5*"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Image Source="" Grid.Row="0" Grid.Column="1" />
                                </Grid>-->

                            <!--Comment Description-->
                            <Label Text="{Binding Description}" 
                                       Grid.Row="1" Grid.ColumnSpan="3" />
                            <!--Comment Image-->
                            <Image Grid.Row="2" Grid.Column="3" 
                                   Source="drawable/czapka.jpg" 
                                   IsVisible="True"
                                   HeightRequest="80">
                                
                            </Image>
                        </Grid>
                        <!--</ViewCell>-->
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>